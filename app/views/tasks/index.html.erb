<h3>Manage Tasks</h3>

<table>
	<tr>
		<td><%= button_to 'New Task', new_task_path, :method => "get" %></td>
		<td><%= button_to 'Completed Tasks', 'completed', :method => "get" %></td>
		<td><%= button_to 'Tags', tags_path, :method => "get" %></td>
	</tr>
</table>

<br /> 

<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Tag</th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
	<td><%= check_box(task, task.isCompleted, "onclick" => "document.location.href='complete/#{task.id}'") %></td>	
    <td><%= task.name %></td>
	<td><%= task.tag.name %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Delete', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

